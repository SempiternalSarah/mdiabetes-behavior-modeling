    "import numpy as np\n",
    "\n",
    "def _padded_binary(a, b):\n",
    "    # helper function to binary encode a and \n",
    "    # pad it to be the length of encoded b\n",
    "    a, b = int(a), int(b)\n",
    "    l = len(format(b,\"b\"))\n",
    "    a = format(a,f\"0{l}b\")\n",
    "    return np.array([int(_) for _ in a])\n",
    "\n",
    "_padded_binary(1, 4)"
   ]
